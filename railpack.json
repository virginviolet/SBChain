{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "build": {
      "commands": [
        "git submodule update --init --recursive"
      ]
    },
    "install": {
      "commands": [
        "python -m venv --copies /opt/venv && . /opt/venv/bin/activate && pip install -r requirements.txt"
      ]
    }
  },
  "deploy": {
    "startCommand": "python sponsorblockcasino.py"
  }
}